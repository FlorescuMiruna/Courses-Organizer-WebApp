
@{
    ViewBag.Title = "Editare disciplina";
}

<h2>@ViewBag.Title</h2>

<form method="post" action="/Subjects/Edit/@ViewBag.Subject.SubjectId">

    @Html.HttpMethodOverride(HttpVerbs.Put)

    <label>Nume materie</label>
    <br /> <input type="text" name="SubjectName" value="@ViewBag.Subject.SubjectName" />
    <br /><br />

    <label>Nume profesor</label>
    <br /> <input type="text" name="TeacherName" value="@ViewBag.Subject.TeacherName" />
    <br /><br />

    <label>Scurta descriere</label>
    <br /> <input type="text" name="Description" value="@ViewBag.Subject.Description" />
    <br /><br />

    <button class="btn btn-success" type="submit">Modifica disciplina</button>
</form>

